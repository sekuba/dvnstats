{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": false
  },
  "files": {
    "includes": [
      "**/*",
      "!build/**",
      "!generated/**",
      "!node_modules/**",
      "!.venv/**",
      "!dashboard/layerzero.json",
      "!dashboard/.next/**",
      "!dashboard/out/**"
    ]
  }
}
